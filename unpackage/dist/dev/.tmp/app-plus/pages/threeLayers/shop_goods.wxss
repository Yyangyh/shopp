	color: #FF431D;
	margin-right: 20rpx;
	height: 70rpx;
	line-height: 70rpx;
}
.product .bottom .data {
	color: #999999;
	font-size: 26rpx;
	height: 70rpx;
	line-height: 70rpx;
}
.product image {
	width: 100%;
	height: 300rpx;
}
