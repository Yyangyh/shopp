<view class="content"><view class="status_bar"></view><returns vue-id="1" titles="{{title}}" bind:__l="__l"></returns><view class="goods"><view class="shop"><image src="../../static/image/secondary/shop.png" mode></image><view class="shop_name">店铺名</view><image src="../../static/image/arrowright.png" mode></image></view><block wx:for="{{data}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="goods_detail"><image src="{{item.images}}" mode></image><view class="detail_right"><view class="words">{{''+item.title+''}}</view><view class="amount"><view class="num"></view><view class="count">{{'x'+item.buy_number+''}}</view></view></view></view></block></view><view class="bottom"><view class="comment">整单评价</view><view class="star"><view class="left">评分</view><block wx:for="{{imgList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><image src="{{item.src}}" mode data-event-opts="{{[['tap',[['choose',[index]]]]]}}" bindtap="__e"></image></block><view class="{{[active>=0?'col':'']}}">{{''+amount+''}}</view></view><view class="pic"><view class="left">晒图</view><view class="pics"><block wx:for="{{image_list}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="pic_box"><image src="{{item}}" mode="aspectFill"></image><image class="close" src="../../static/image/secondary/close2.png" mode data-event-opts="{{[['tap',[['deletes',[index]]]]]}}" bindtap="__e"></image></view></block><image src="../../static/image/addpic.png" mode data-event-opts="{{[['tap',[['add_image',['$event']]]]]}}" bindtap="__e"></image></view></view><view class="say"><view class="left">评论</view><textarea value="{{content}}" placeholder="说点什么吧" data-event-opts="{{[['input',[['__set_model',['','content','$event',[]]]]]]}}" bindinput="__e"></textarea></view></view><view data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" class="submit" bindtap="__e">发布</view></view>