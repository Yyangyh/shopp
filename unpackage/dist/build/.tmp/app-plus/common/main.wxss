.status_bar {
	height: var(--status-bar-height);
	width: 100%;
	top: 0;
	left: 0;
	z-index: 998;
	background: #1D9DFF;
	position: fixed;
}
.mask_black {
	position: fixed;
	height: 100%;
	width: 100%;
	background: rgba(0, 0, 0, 1);
	opacity: 0.3;
	top: 0;
	left: 0;
	z-index: 998;
}
